<?xml version="1.0" encoding="ISO-8859-1" ?>

<!--  DistriBBS configuration test file -->
<configuration>
   <!-- Station Details -->
   <callsign>NOCALL</callsign>
   
   
   <!-- Connectivity setup -->          
   <connectivity>
     
      <!-- Connector types (LoRa, IPv4, IPv6, AX25) -->
      <connector>
      	  <type>org.prowl.distribbs.node.connectivity.lora.LoRa</type>
	      <announce>true</announce>
	      <!-- Announces the node via LoRa every X minutes (minimum 15) -->
          <announcePeriod>60</announcePeriod>
      </connector>
     
      <connector>
      	  <type>org.prowl.distribbs.node.connectivity.ipv4.IPv4</type>
          <listen>0.0.0.0</listen>
          <localip>0.0.0.0</localip>
          <announce>true</announce>
          <remoteCall>N0CALL</remoteCall> <!-- The remote nodes callsign -->
          <peerSecret>ThisIsASecretYouShareBetweenYourPeerKeepItSecureAndUnique</peerSecret> <!-- Shared between both nodes -->
      </connector>
      
      <!-- AX25 uses the callsign defined in 'callsign' above -->
      <connector>
          <type>org.prowl.distribbs.node.connectivity.ax25.AX25</type>
          <!-- Sends a UI announce packet every X minutes (minimum 15) -->
          <announce>true</announce>
          <announcePeriod>60</announcePeriod>
      </connector>
   
   </connectivity>
   
   
   <services>
   
      <service>
         <type>chat</type>
      </service>
      
      <service>
         <type>messages</type>
      </service>
      
      <service>
         <type>aprs</type>
      </service>
      
      <service>
         <type>newsgroups</type>
      </service>
      
      <service>
         <type>qsl</type>
      </service>
     
   </services>
   
   <!-- 
     Filters are used to hide messages that you do not want to see from your node using
     the 'hide' tag, and not carry messages at all using the 'discard' tag.
   	 RE Regular expressions are supported.    
    -->
   <filters>
   
       <!-- Hides any messages containing this word from your message list -->
       <hide>viagra</hide>
       <hide>xanax</hide>
       
       <!-- Hides any messages from this callsign -->
       <hidecall>NOCALL</hidecall> 
       <hidecall>N0CALL</hidecall> 
       
       <!-- Doesn't allow messages containing this word in *any* of the message text or 
       headers on your node, leading and trailing spaces supported, as are regexps -->
       <discard> cunt</discard>
       <discard>fuck</discard> 
       
   </filters>
   
   
</configuration>